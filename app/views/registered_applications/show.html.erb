<h1><%= @registered_application.name %></h1>

<div class="row">
  <div class="col-md-8">
    <p>URL: <%= @registered_application.url %></p>
  </div>

  <div class="row">
    <div class="col-md-8">
      <p>Events:</p>
      <% @events.each  do |name,events_type|%>
      <p> <%= name %></p>
      <%= pie_chart @registered_application.events.group(:name).count %>
      <%= line_chart @registered_application.events.group_by_day(:created_at).count %>

      <% end %>
    </div>

    <div class="col-md-4">
      <%= link_to "Edit App", edit_registered_application_path(@registered_application), class: 'btn btn-success' %>
      <%= link_to "Delete App", @registered_application, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this app?'} %>
    </div>
  </div>
